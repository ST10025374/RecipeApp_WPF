<Window x:Class="WPFdemo.ScaleUpRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFdemo"
        mc:Ignorable="d"
        Title="ScaleUpRecipeWindow" Height="450" Width="800">
    <Grid>
        <Menu Grid.ColumnSpan="3" RenderTransformOrigin="0.648,0.5" Height="434" VerticalAlignment="Top">
            <MenuItem Header="Recipe">
                <MenuItem Header="Store Recipe"/>
                <MenuItem Header="Display Recipe"/>
                <MenuItem Header="Scale Up Recipe"/>
                <MenuItem Header="Delete Recipe"/>
                <MenuItem Header="Filter Recipes" />
                <MenuItem Header="Create Menu"/>
            </MenuItem>
            <MenuItem Header="Exit" />
        </Menu>

        <Button Content="Scale Up Recipe" HorizontalAlignment="Left" Margin="31,100,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Enter the scale factor:" HorizontalAlignment="Left" Margin="27,46,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ScaleFactorTextBox" HorizontalAlignment="Left" Margin="31,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.225,0.448"/>
    </Grid>

</Window>
