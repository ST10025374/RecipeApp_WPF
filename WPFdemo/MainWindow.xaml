<Window x:Class="WPFdemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFdemo"
        mc:Ignorable="d"
        Title="Store Recipe APP" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="609*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="Recipe">
                <MenuItem Header="Store Recipe" Click="StoreRecipe_Click"/>
                <MenuItem Header="Display Recipe" Click="DisplayRecipe_Click"/>
                <MenuItem Header="Scale Up Recipe" Click="ScaleUpRecipe_Click"/>
                <MenuItem Header="Delete Recipe" Click="DeleteRecipe_Click"/>
                <MenuItem Header="Filter Recipes" Click="FilterRecipes_Click"/>
                <MenuItem Header="Create Menu" Click="CreateMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Exit" Click="Exit_Click"/>
        </Menu>
    </Grid>
</Window>