<Window x:Class="WPFdemo.DeleteRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFdemo"
        mc:Ignorable="d"
        Title="DeleteRecipeWindow" Height="450" Width="800">
    <Grid>
        <Menu Grid.ColumnSpan="3" RenderTransformOrigin="0.648,0.5" Height="434" VerticalAlignment="Top">
            <MenuItem Header="Recipe">
                <MenuItem Header="Store Recipe"/>
                <MenuItem Header="Display Recipe"/>
                <MenuItem Header="Scale Up Recipe"/>
                <MenuItem Header="Delete Recipe"/>
                <MenuItem Header="Filter Recipes" />
                <MenuItem Header="Create Menu"/>
            </MenuItem>
            <MenuItem Header="Exit" />
        </Menu>

        <Button Content="Delete Recipe" HorizontalAlignment="Left" Margin="27,103,0,0" VerticalAlignment="Top" Width="120" Click="DeleteButton_Click"/>

        <Label Content="Enter the recipe name to delete:" HorizontalAlignment="Left" Margin="27,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RecipeNameTextBox" HorizontalAlignment="Left" Margin="27,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
